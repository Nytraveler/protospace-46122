<h2>新規登録</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_with model: resource, scope: resource_name,
              url: registration_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :name, "ユーザー名" %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="field">
    <%= f.label :profile, "プロフィール" %><br>
    <%= f.text_area :profile, rows: 4, placeholder: "自己紹介など", required: true %>
  </div>

  <div class="field">
    <%= f.label :occupation, "所属" %><br>
    <%= f.text_field :occupation, required: true %>
  </div>

  <div class="field">
    <%= f.label :position, "役職" %><br>
    <%= f.text_field :position, required: true %>
  </div>

  <hr>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
      <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
