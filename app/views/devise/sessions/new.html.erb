<h2>ログイン</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_with model: resource, scope: resource_name,
              url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, autocomplete: "current-password", required: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
