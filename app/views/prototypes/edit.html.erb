<main class="main">
  <div class="inner">
    <h2 class="page-heading">プロトタイプ編集</h2>

    <%= form_with model: @prototype, local: true do |f| %>
      <div class="field">
        <%= f.label :name, "プロトタイプの名称" %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :catch_copy, "キャッチコピー" %><br>
        <%= f.text_area :catch_copy ,class: 'wide-input'%>
      </div>

      <div class="field">
        <%= f.label :concept, "コンセプト" %><br>
        <%= f.text_area :concept ,class: 'wide-input'%>
      </div>

      <div class="field">
        <%= f.label :image, "プロトタイプの画像" %><br>
        <%= f.file_field :image, class: "file-input" %>
      </div>

      <div class="actions">
        <%= f.submit "保存する" , class: "form__btn"%>
      </div>
    <% end %>
  </div>
</main>